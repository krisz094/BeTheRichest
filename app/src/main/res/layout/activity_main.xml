<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context="hu.uniobuda.nik.betherichest.MainActivity">

    <TextView
        android:id="@+id/currMoneyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="12sp"
        android:text="Current Money"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/moneyPerSecText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currMoneyText"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="12sp"
        android:text="Money Per Sec"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/moneyPerTapText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moneyPerSecText"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="12sp"
        android:text="Money Per Tap"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/clickbtn"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/moneyPerTapText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/dollar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="proba"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@id/clickbtn"
        />

    <ImageView
        android:id="@+id/investments"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="28dp"
        app:srcCompat="@drawable/investments" />


    <ImageView
        android:id="@+id/hamburger"
        android:layout_width="85dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/burger"
        android:layout_alignBottom="@+id/investments"
        android:layout_toEndOf="@+id/investments" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/clover"
        android:layout_alignBottom="@+id/hamburger"
        android:layout_toEndOf="@+id/hamburger" />

    <TextView
        android:id="@+id/investemntsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/investments"
        android:layout_alignStart="@+id/investments"
        android:layout_toStartOf="@+id/imageView5"
        android:text="Investments"
        android:layout_alignEnd="@+id/investments" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gambling"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrades"
        android:layout_alignBottom="@+id/hamburger"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
